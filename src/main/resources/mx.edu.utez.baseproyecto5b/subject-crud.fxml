<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="20.0" vgap="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.baseproyecto5b.controller.SubjectController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!--Columna Izquierda -->
    <VBox spacing="20.0">
        <VBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Subject:" />
            <TextField fx:id="txtFieldSubject" HBox.hgrow="ALWAYS" />
        </VBox>
        <VBox spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Teacher:" />
            <TextField fx:id="txtFieldTeacher" HBox.hgrow="ALWAYS" />
        </VBox>
        <HBox spacing="10.0">
            <Button fx:id="insertBtn" onAction="#onInsertButtonClick" style="-fx-background-color: #185093; -fx-text-fill: white; -fx-font-weight: bold;" text="Insertar" />
            <Button fx:id="updateBtn" onAction="#onUpdateButtonClick" style="-fx-background-color: #185093; -fx-text-fill: white; -fx-font-weight: bold;" text="Actualizar" />
            <Button fx:id="deleteBtn" onAction="#onDeleteButtonClick" style="-fx-background-color: #185093; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar" />
        </HBox>
        <VBox alignment="CENTER" spacing="10.0">
            <Button fx:id="backButton" maxHeight="30" maxWidth="215" minHeight="30" minWidth="215" onAction="#onBackButtonClick" style="-fx-background-color: #155e72; -fx-text-fill: white; -fx-font-weight: bold;" text="Volver" />
        </VBox>
    </VBox>

    <!-- Columna derecha -->
    <TableView fx:id="tableView" editable="true" GridPane.columnIndex="1">
        <columns>
            <TableColumn fx:id="subjectColumn" prefWidth="124.0" text="Subject" />
            <TableColumn fx:id="teacherColumn" prefWidth="122.0" text="Teacher" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>
